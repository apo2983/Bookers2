<div class="container">
	<div class="row">
		<%= render 'devise/shared/list',user:@user,book:@book %>
		<div class="col-xs-9">
			<h1>Users</h1>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user|%>
					<tr>
						<td><%= attachment_image_tag user,:profile_image,fallback:'no_image.jpg',format:'jpeg',size:'50x50'%></td>
						<td><%= user.name %></td>
						<td><%=link_to "Show",user_path(user.id),class:'hover-visited' %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>