<div class="container">
	<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<h2><%= @book.errors.count %> errors prohibited thi book from being saved:</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="row">
		<%= render 'devise/shared/list',user:@user,book:@book %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr class="user-show-books">
							<td>
								<%= link_to user_path(book.id) do%>
									<%= attachment_image_tag book.user, :profile_image,format: 'jpeg',fallback: 'no_image.jpg', size:
									'50x50' %>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(book.id),class:'hover-visited' do%>
									<%= book.title%>
								<% end %>
							</td>
							<td><%= book.body %></td>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>