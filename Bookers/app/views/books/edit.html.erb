<% if flash[:notice] %>
	<p class="flash">
		<%= flash[:notice] %>
	</p>
<% end %>
<h1>Editing Book</h1>
<%= form_for(@book,path:'book_path(@book.id)') do |f| %>
	<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<h2><%= @book.errors.count %> errors prohibited thi book from being saved:</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="field">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<h4>Body</h4>
		<%= f.text_area :body %>
	</div>
	<div class="actions">
		<%= f.submit 'Update Book' %>
	</div>
<% end %>

<%= link_to "Show",book_path(@book.id) %> |
<%= link_to "Back",books_path %>